/**pages/index.wxss**/
 
/**基础风格样式**/
@import '../../common/towxml/style/main.wxss';
 
/**如果页面有动态主题切换，则需要将使用到的样式全部引入**/
 
/**主题配色（浅色样式）**/
@import '../../common/towxml/style/theme/light.wxss';
 
/**主题配色（深色样式）**/
@import '../../common/towxml/style/theme/dark.wxss';
.directory-list{
  display: flex;
  flex-direction: column;
  width: 100%;
  text-align: left;
  font-weight: 600;
  padding-left: 50rpx;

}
.directory-item{
  margin: 10rpx 0;
}
.container{
  background: #fff;
  width:100%;
  color: #2B3434;
  font-weight: 700;
  height: 100%;
  border-top: 1px solid #2B3434;
}
page{
  width: 100%;
  height: 100%;
  background: #fff;
}
.directory-icon{
  width: 80rpx;
  height: 80rpx;
  position: fixed;
  top: 0;
  left: 0;
  opacity: 0.2;
}
.directory-icon-left{
  width: 150rpx;
  height: 150rpx;
  position: fixed;
  bottom: 50%;
  left: -25rpx;
  opacity: 0.5;
}
.directory-icon-right{
  width: 150rpx;
  height: 150rpx;
  position: fixed;
  bottom: 50%;
  right: -50rpx;
  opacity: 0.5;
}
.directory-introduce{
  position: absolute;
  width: 600rpx;
  margin-left: -300rpx;
  left: 50%;
  top:10%;
  
}
.directory-introduce-btn{
  position: absolute;
  width: 600rpx;
  margin-left: -300rpx;
  left: 50%;
  bottom:20%;
  text-align: center;
  background:  #2B3434;
  padding: 10rpx;
  color: white;
}
page{
  background: white;
}